<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@color/background">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”’ PasswordMaker346"
        android:textSize="24sp"
        android:textColor="@color/textPrimary"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Input for password length -->
    <EditText
        android:id="@+id/passwordLengthInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password length"
        android:inputType="number"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background_normal"
        android:textColor="@color/textPrimary"/>

    <!-- CheckBox: Include Uppercase -->
    <CheckBox
        android:id="@+id/uppercaseCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include Uppercase Letters"
        android:checked="true"
        android:textColor="@color/textPrimary" />

    <!-- CheckBox: Include Numbers -->
    <CheckBox
        android:id="@+id/numbersCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include Numbers"
        android:checked="true"
        android:textColor="@color/textPrimary" />

    <!-- CheckBox: Include Symbols -->
    <CheckBox
        android:id="@+id/symbolsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include Symbols"
        android:checked="true"
        android:textColor="@color/textPrimary" />

    <!-- Generate button -->
    <Button
    android:id="@+id/generateButton"
    style="@style/MyButtonStyle"
    android:backgroundTint="@color/primary"
    android:text="Generate Password" />

    <!-- TextView to show generated password -->
    <TextView
        android:id="@+id/passwordOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your password will appear here"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textColor="@color/textPrimary"
        android:background="@color/neutralLight"
        android:gravity="center" />

    <!-- Copy to clipboard button -->
    <Button
    android:id="@+id/copyButton"
    style="@style/MyButtonStyle"
    android:backgroundTint="@color/accent"
    android:text="Copy to Clipboard" />

</LinearLayout>
